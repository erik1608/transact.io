<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="300">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%d [%t] %c %M - %p: %m%n" />
		</Console>
		
		<RollingFile name="ROLFILE" 
		             fileName="${sys:catalina.base}/logs/alexa-rest.log"
					 append="true"
					 filePattern="${sys:catalina.base}/logs/alexa-rest-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout>
				<Pattern>%d{HH:mm:ss,SSS} %F %M %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
			<DefaultRolloverStrategy max="5" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="DEBUG">
			<AppenderRef ref="CONSOLE" />
  		</Root>
  	</Loggers>
</Configuration>
